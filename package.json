{
	"name": "inventory",
	"description": "Nextcloud Inventory",
	"version": "0.0.1",
	"author": {
		"name": "Raimund Schlüßler",
		"email": "raimund.schluessler@mailbox.org"
	},
	"license": "AGPLv3",
	"private": true,
	"homepage": "https://gitlab.rschluessler.com/raimund.schluessler/Inventory",
	"scripts": {
		"dev": "npm run sprites && webpack --config webpack.dev.js",
		"watch": "webpack --progress --watch --config webpack.dev.js",
		"build": "npm run sprites && webpack --progress --hide-modules --config webpack.prod.js",
		"lint": "eslint --ext .js,.vue src tests",
		"lint:fix": "eslint --ext .js,.vue src tests --fix",
		"test": "jest --verbose",
		"sprites": "svg-sprite --config svg-sprite-bw.json img/src/bw/*.svg"
	},
	"repository": {
		"type": "git",
		"url": "git@gitlab.rschluessler.com:raimund.schluessler/Inventory.git"
	},
	"bugs": "https://gitlab.rschluessler.com/raimund.schluessler/Inventory/issues",
	"contributors": [],
	"dependencies": {
		"@babel/polyfill": "7.0.0",
		"axios": "0.18.0",
		"papaparse": "4.6.2",
		"search-query-parser": "1.4.1",
		"vue": "2.5.20",
		"vue-router": "3.0.2",
		"vuex": "3.0.1",
		"vuex-router-sync": "5.0.0"
	},
	"devDependencies": {
		"@babel/core": "7.2.0",
		"@babel/plugin-syntax-dynamic-import": "7.2.0",
		"@babel/preset-env": "7.2.0",
		"@vue/test-utils": "1.0.0-beta.27",
		"babel-core": "7.0.0-bridge.0",
		"babel-eslint": "10.0.1",
		"babel-jest": "23.6.0",
		"babel-loader": "8.0.5",
		"css-loader": "2.0.0",
		"eslint": "5.10.0",
		"eslint-config-standard": "12.0.0",
		"eslint-friendly-formatter": "4.0.1",
		"eslint-loader": "2.1.1",
		"eslint-plugin-import": "2.14.0",
		"eslint-plugin-node": "8.0.0",
		"eslint-plugin-promise": "4.0.1",
		"eslint-plugin-standard": "4.0.0",
		"eslint-plugin-vue": "5.0.0",
		"file-loader": "2.0.0",
		"jest": "23.6.0",
		"jest-serializer-vue": "2.0.2",
		"jsdom": "13.0.0",
		"jsdom-global": "3.0.2",
		"node-sass": "4.11.0",
		"prettier-eslint": "8.8.2",
		"raw-loader": "1.0.0",
		"sass-loader": "7.1.0",
		"stylelint": "9.9.0",
		"stylelint-config-recommended-scss": "3.2.0",
		"stylelint-scss": "3.4.1",
		"stylelint-webpack-plugin": "0.10.5",
		"svg-sprite": "1.5.0",
		"vue-jest": "3.0.1",
		"vue-loader": "15.4.2",
		"vue-template-compiler": "2.5.20",
		"webpack": "4.27.1",
		"webpack-cli": "3.1.2",
		"webpack-merge": "4.1.5"
	},
	"engines": {
		"node": ">=10.0.0"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"vue"
		],
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1"
		},
		"transform": {
			"^.+\\.js$": "<rootDir>/node_modules/babel-jest",
			".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
		},
		"snapshotSerializers": [
			"<rootDir>/node_modules/jest-serializer-vue"
		],
		"collectCoverage": true,
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.{js,vue}",
			"!**/node_modules/**",
			"!**/vendor/**"
		],
		"coverageReporters": [
			"json",
			"text",
			"html"
		]
	}
}
