{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "indentation": "tab",
    "number-leading-zero": "never",
    "comment-empty-line-before": ["always", {
        "except": ["first-nested"]
    }],
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "no-descending-specificity": null
  }
}
